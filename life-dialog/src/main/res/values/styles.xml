<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="anim_bottom_dialog">
        <item name="android:windowEnterAnimation">@anim/bottom_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_dialog_out</item>
    </style>

    <style name="anim_menu_dialog">
        <item name="android:windowEnterAnimation">@anim/anim_menu_in</item>
        <item name="android:windowExitAnimation">@anim/anim_menu_out</item>
    </style>

    <style name="anim_edit_dialog">
        <item name="android:windowEnterAnimation">@anim/anim_edit_in</item>
        <item name="android:windowExitAnimation">@anim/anim_edit_out</item>
    </style>

</resources>
